            </HBox>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="30.0" prefWidth="200.0" spacing="30.0">
               <children>
                  <Button fx:id="btnRegresar" mnemonicParsing="false" onAction="#clicRegresar" prefWidth="70.0" stylesheets="@style.css" text="Regresar">
